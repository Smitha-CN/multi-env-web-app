pipeline {
    agent any

    parameters {
        choice(name: 'ENVIRONMENT', choices: ['dev', 'prod'], description: 'Select environment to deploy')
    }

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')     // Replace with your Jenkins AWS credential ID
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')     // Replace with your Jenkins AWS credential ID
        TF_IN_AUTOMATION      = "true"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Smitha-CN/multi-env-web-app.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir("envs/${params.ENVIRONMENT}") {
                    sh "terraform init -backend-config=../../backend/backend-${params.ENVIRONMENT}.tf"
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("envs/${params.ENVIRONMENT}") {
                    sh "terraform plan -var-file=terraform.tfvars"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("envs/${params.ENVIRONMENT}") {
                    input message: "Apply changes to ${params.ENVIRONMENT}?"
                    sh "terraform apply -auto-approve -var-file=terraform.tfvars"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Infrastructure deployed successfully to ${params.ENVIRONMENT}!"
        }
        failure {
            echo "❌ Deployment failed for ${params.ENVIRONMENT}."
        }
    }
}
